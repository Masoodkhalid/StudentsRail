<p id="notice">
<%= notice %>
</p>
<% if user_signed_in? %>
 
<h1>Students</h1>

<table class = "table table-striped table-bordered table-hover">
  <thead class ="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Age</th>
      <th>user_id</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <% if student.user == current_user %>
      <tr>
        <td>
        <%= link_to student.name, student %>
   
        </td>
        <td><%= student.email %></td>
        <td><%= student.address %></td>
        <td><%= student.age %></td>
        <td><%= student.user_id %></td>

        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger btn-sm" %></td>
        
        </tr>

        <% end %>


    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
<% else %>
<h1>Hello</h1>
<% end %>